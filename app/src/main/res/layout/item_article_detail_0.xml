<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="金色观察|ETH的利好和利空逻辑"
        android:textColor="@color/color_00_00_00"
        android:textSize="21dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="区间财经 Taylor W"
                android:textColor="@color/color_00_00_00"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3小时前    40624"
                android:textColor="@color/color_66_66_66"
                android:textSize="11dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_07_bb_99"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/wallet_follow"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="13dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="30dp"
        android:paddingRight="12dp"
        android:text="官网公告，MXC抹茶6月4日14：00上线，并开放
AR/USDT交易对，现已开放AR充值功能。公开资
料显示，Arweave是一个新型区块链存储平台，
旨在克服区块链数据存储中存在的可扩展性。
数据可用性和成本问题。致力于“互联网的可浏览
的家庭网络”。
使其是一个新型区块链存储平台。旨在克服区块链
数据存储中存在的可扩展性、数据可用性和成本问
题。是一个新型区块链存储平台，旨在克服区块链
数据存储中存在的可扩展性、数据可用性和成本问
题。
                            "
        android:textColor="@color/color_00_00_00"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.5dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/color_fa_fa_fa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/wallet_share_to"
            android:textColor="@color/color_01_01_01"
            android:textSize="14dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/color_fa_fa_fa" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/ivShare0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_0" />

        <ImageView
            android:id="@+id/ivShare1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_1" />

        <ImageView
            android:id="@+id/ivShare2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_2" />

        <ImageView
            android:id="@+id/ivShare3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_3" />

        <ImageView
            android:id="@+id/ivShare4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_4" />

        <ImageView
            android:id="@+id/ivShare5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_5" />

        <ImageView
            android:id="@+id/ivShare6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_6" />

        <ImageView
            android:id="@+id/ivShare7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wallet_share_7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_f8_f8_f8"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_07_bb_99" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8.5dp"
            android:text="@string/wallet_relate_read"
            android:textColor="@color/color_00_00_00"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>