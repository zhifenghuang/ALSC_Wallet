<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="72.5dp"
    android:background="@color/color_ff_ff_ff"
    android:paddingLeft="13dp">


    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round" />


    <TextView
        android:id="@+id/tvUnReadMsgNum"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23dp"
        android:background="@drawable/bg_shape_f96559_7"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="2"
        android:textColor="@color/color_ff_ff_ff"
        android:textSize="8dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvUnReadMsgNum"
        android:layout_toRightOf="@id/ivAvatar"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="晚风"
            android:textColor="@color/color_00_00_00"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="下午3:40 - 明天老地方见，钱包带好！"
            android:textColor="@color/color_65_65_65"
            android:textSize="12dp" />

    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="53dp"
        android:alpha="0.2"
        android:background="@color/color_8b_8b_8b" />


</RelativeLayout>