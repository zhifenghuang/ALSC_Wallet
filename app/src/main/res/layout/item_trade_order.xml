<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="13dp">

        <ImageView
            android:id="@+id/ivCoinIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/wallet_usdt" />

        <TextView
            android:id="@+id/tvCoinName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="11dp"
            android:text="USDT"
            android:textColor="@color/color_00_00_00"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/wallet_wait_pay"
            android:textColor="@color/color_ed_37_35"
            android:textSize="13dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/wallet_type"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_puchase"
            android:textColor="@color/color_01_01_01"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/wallet_trade_money"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvTradeMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 CNY"
            android:textColor="@color/color_01_01_01"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/wallet_trade_num"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvTradeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70.82"
            android:textColor="@color/color_01_01_01"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/wallet_trade_no"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvTradeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="20200609484374"
            android:textColor="@color/color_01_01_01"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/ivCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dp"
            android:src="@drawable/wallet_copy" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp"
        android:paddingRight="11dp"
        android:text="@string/wallet_trade_object"
        android:textColor="@color/color_66_66_66"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvObjectName"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="诚信商..."
        android:textColor="@color/color_07_bb_99"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/tvLook"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:layout_below="@id/tvObjectName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/shape_07bb99_2"
        android:gravity="center"
        android:text="@string/wallet_look"
        android:textColor="@color/color_ff_ff_ff"
        android:textSize="14dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvLook"
        android:layout_marginTop="10dp"
        android:background="@color/color_e2_eb_f0" />


</RelativeLayout>