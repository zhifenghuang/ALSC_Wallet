<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_white_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_btc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/add_address_btc"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <TextView
            android:id="@+id/tv_eth"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/add_address_eth"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <TextView
            android:id="@+id/tv_omni"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/add_address_omni"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <TextView
            android:id="@+id/tv_erc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/add_address_erc"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <TextView
            android:id="@+id/tv_alsc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/add_address_alsc"
            android:textColor="@color/text_color"
            android:textSize="18dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/corner_white_5"
        android:gravity="center"
        android:text="@string/btn_cancle"
        android:textColor="@color/text_color"
        android:textSize="18dp" />
</LinearLayout>
