<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/ivCover"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="BTR比特白银核聚变玩法引爆币圈 3倍私募结束倒计时"
            android:textColor="@color/color_00_00_00"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="李建峰本人BHH399 17小时前"
            android:textColor="@color/color_8c_8c_8c"
            android:textSize="12dp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ivCover"
        android:layout_marginTop="15dp"
        android:background="@color/color_fa_fa_fa" />


</RelativeLayout>