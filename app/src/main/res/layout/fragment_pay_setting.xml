<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@color/color_ed_37_35" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/wallet_pay_tip"
            android:textColor="@color/color_ed_37_35"
            android:textSize="12dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBankCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="13.5dp"
            android:paddingRight="35.5dp"
            android:text="@string/wallet_bank_card"
            android:textColor="@color/color_00_00_00"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvAliPay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="13.5dp"
            android:paddingRight="35.5dp"
            android:text="@string/wallet_pay_type_2"
            android:textColor="@color/color_b2_b2_b2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvWePay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="13.5dp"
            android:paddingRight="35.5dp"
            android:text="@string/wallet_pay_type_1"
            android:textColor="@color/color_b2_b2_b2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvPayPal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="13.5dp"
            android:paddingRight="35.5dp"
            android:text="@string/wallet_pay_type_4"
            android:textColor="@color/color_b2_b2_b2"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e2_eb_f0" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f8_f8_f8" />


</LinearLayout>