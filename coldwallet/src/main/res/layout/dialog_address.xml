<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_white_5"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/tv_btc"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_btc_3" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="@color/text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivSelectBtc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:src="@mipmap/icon_address_select"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <LinearLayout
            android:id="@+id/tv_eth"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_eth_3" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ETH"
                android:textColor="@color/text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivSelectEth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:visibility="gone"
                android:src="@mipmap/icon_address_select"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <LinearLayout
            android:id="@+id/tv_omni"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_usdt_3" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="USDT-OMNI"
                android:textColor="@color/text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivSelectOmni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:visibility="gone"
                android:src="@mipmap/icon_address_select"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_7c8498_20" />

        <LinearLayout
            android:id="@+id/tv_erc"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_usdt_3" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="USDT-ERC20"
                android:textColor="@color/text_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivSelectErc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:visibility="gone"
                android:src="@mipmap/icon_address_select"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
