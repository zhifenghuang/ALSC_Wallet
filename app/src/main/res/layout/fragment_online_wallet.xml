<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8_f8_f8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTopBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_top_bg" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOnlineWallet"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/shape_f3f7fa_4_right"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/wallet_online"
            android:textColor="@color/color_07_bb_99"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvColdWallet"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="-1.5dp"
            android:background="@drawable/shape_stroke_fcf7fa_4_right"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/wallet_cold"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/wallet_total_zichan"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wallet_eye_open"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="6,297,502.12"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="25dp"
            android:text="$"
            android:textColor="@color/color_ff_ff_ff"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/ll3"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_ffffff_4"
        android:paddingLeft="23dp"
        android:paddingTop="18dp"
        android:paddingRight="23dp">

        <ImageView
            android:id="@+id/ivCoinIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wallet_btc" />


        <TextView
            android:id="@+id/tvCoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivCoinIcon"
            android:text="BTC"
            android:textColor="@color/color_01_01_01"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvBitCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCoinName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ivCoinIcon"
            android:paddingTop="3dp"
            android:text="@string/wallet_bitcoin"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="12.2982"
            android:textColor="@color/color_00_00_00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvValue"
            android:layout_alignParentRight="true"
            android:paddingTop="3dp"
            android:text="â‰ˆ $ 184,470325"
            android:textColor="@color/color_66_66_66"
            android:textSize="12dp" />


        <LinearLayout
            android:id="@+id/ll_detail"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/wallet_zichan_detail"
                android:textColor="@color/color_07_bb_99"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="6dp"
                android:src="@drawable/wallet_right_arrow_green" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_detail"
            android:orientation="horizontal"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="18dp"
                android:text="1FyMtih4h4AVzAVz...1FyMti.h4AVz1F"
                android:textColor="@color/color_b2_b2_b2"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/color_b2_b2_b2" />

            <ImageView
                android:id="@+id/ivCopyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:src="@drawable/wallet_address_copy" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />


</RelativeLayout>