<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llReport"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_wallet_triangle_top_ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_ff_ff_ff"
                android:drawableLeft="@drawable/wallet_report"
                android:drawablePadding="8.5dp"
                android:gravity="center"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:text="@string/wallet_report"
                android:textColor="@color/color_00_00_00"
                android:textSize="12dp" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>