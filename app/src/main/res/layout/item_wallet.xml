<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_ffffff_4"
    android:paddingLeft="23dp"
    android:paddingTop="12dp"
    android:paddingRight="23dp"
    android:layout_marginBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/ivCoinIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/wallet_btc_icon_1" />


    <TextView
        android:id="@+id/tvCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/ivCoinIcon"
        android:text="BTC"
        android:textColor="@color/color_01_01_01"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCoinName"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/ivCoinIcon"
        android:paddingTop="3dp"
        android:text="1FyMFyFyFy......h4FyAVz"
        android:textColor="@color/color_b2_b2_b2"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="12.2982"
        android:textColor="@color/color_00_00_00"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvValue"
        android:layout_alignParentRight="true"
        android:paddingTop="3dp"
        android:text="â‰ˆ $ 184,470325"
        android:textColor="@color/color_66_66_66"
        android:textSize="12dp" />



</RelativeLayout>
